<section id="contactUs" class="contact-parlex">
  <div class="parlex-back">
    <div class="container">
      <div class="row">
        <div class="heading text-center"> 
          <h2>User Settings</h2>
        </div>
      </div>
      <div class="row mrgn30">
        <div id="contactfrm">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal", id: "contact-form"}) do |f| %>
            <%= f.error_notification %>
            <div class="col-sm-12">
              <div class="col-md-5">
                <div class="form-group">
                <%= f.input :username, required: true, autofocus: true, label: false, placeholder: "User Name", input_html: { class: "form-control wow fadeInUp", id: "Username"} %>
                </div>
                <div class="form-group">
                <%= f.input :first_name, required: true, label: false, placeholder: "First Name", input_html: { class: "form-control wow fadeInUp", id: "FirstName"} %>
                </div>
                <div class="form-group">
                <%= f.input :last_name, required: true, label: false, placeholder: "Last Name", input_html: { class: "form-control wow fadeInUp", id: "LastName"} %>
                </div>
                <div class="form-group">
                <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: { class: "form-control wow fadeInUp", id: "Email"} %>
                </div>
                <div class="form-group">
                <%= f.input :age, input_html: {type: "hidden", id: "age", class: "form-control wow fadeInUp"} %>
                </div>
                <div class="form-group">
                <%= f.input :gender, collection: ["Male","Female"], input_html: {id: "gender", class: "form-control wow fadeInUp"} %>
                </div>
                <div class="form-group">
                <%= f.input :bio, input_html: {id: "bio", class: "form-control wow fadeInUp"} %>
                </div>
              </div>

              <div class="col-md-2">
              </div>
              
              <div class="col-md-5">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
                <div class="form-group">
                  <%= image_tag resource.avatar.url(:thumb), class: "" %>
                </div>
                <div class="form-group">
                  <%= f.input :avatar, as: :file %>
                </div>

                <div class="form-group">
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: false, placeholder: "Password", input_html: {class: "form-control wow fadeInUp", id: "Password" } %>
                </div>     
                <div class="form-group">
                <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password Confirmation", input_html: { class: "form-control wow fadeInUp", id: "PasswordConf"} %>
                </div>
                <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: "form-control wow fadeInUp", id: "CurrentPass"} %>
                </div> 
                <div class="form-group">
                  <%= f.button :submit, "Update", class: "btn btn-success wow fadeInUp col-sm-12" %>
                </div> 
              </div>             
            </div>
          <% end %>
          <h3>Cancel my account</h3>
          <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
          <%= link_to "Back", :back %>
        </div>  
      </div>
    </div>
  </div>
</section>

<section id="contactUs" class="contact-parlex">
  <div class="parlex-back">
    <div class="container">
      <div class="row">
        <div class="heading text-center"> 
          <h2>Sign In</h2>
        </div>
      </div>
      <div class="row mrgn30">
        <div id="contactfrm">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal", id: "contact-form"}) do |f| %>
          <%= f.error_notification %>
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: { class: "form-control wow fadeInUp", id: "Email"} %>
              </div>
              <div class="form-group">
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: false, placeholder: "Password", input_html: {class: "form-control wow fadeInUp", id: "Name" } %>
              </div>          
              <div class="form-group">
                <%= f.button :submit, "Sign In", class: "btn btn-success wow fadeInUp col-sm-12" %>
              </div>              
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>  
      </div>
    </div>
  </div>
</section>

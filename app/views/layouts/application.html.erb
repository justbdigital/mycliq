<!DOCTYPE html>
<html>
<head>
  <title>Mycliq</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
</head>
<body>
<%= render "layouts/header" %>
<% flash.each do |type, message| %>
	<div class="alert alert-info fade-in">
	<button class="close" data-dismiss="alert">x</button>
	<%= message %>
	</div>
<% end %>

<%= yield %>

<% if user_signed_in? %>
  <%= javascript_tag do %>
  $(document).ready(function() {

    $.ajaxSetup({ cache: true });
    $.getScript('//connect.facebook.net/en_US/sdk.js', function(){
      FB.init({
        appId: '493192404199133',
        version: 'v2.5'
      });
      $("#invitation_email").on("click", function() {
        FB.ui({
        method: 'send',
        link: 'https://mycliq.herokuapp.com/',
        display: 'popup'
        },
        function(event) {
          var e = event
          if(e != null){
            $("body").prepend('<div class="alert alert-info fade-in"><button class="close" data-dismiss="alert">x</button>Facebook invitation has been sent.</div>');
          }
        });
      });
    });

    var invite = document.getElementById('invitation_email')
    var info = document.getElementsByClassName("alert alert-info fade-in")

    if(invite != undefined && !window.location.hash && info.length < 1) {
        window.location = window.location + '#loaded';
        window.location.reload();
    }

    handler = Gmaps.build('Google');
      handler.buildMap({ provider: {zoomControl: true, mapTypeControl: false, streetViewControl: false}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(14);
    });
  });
  <% end %>
<% end %>
</body>
</html>

<div class="page-section colord text-center">
  <h2><%= t 'devise.invitations.edit.header' %></h2>
</div>
<div class="container">
  <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token %>
    <%= f.input :username, input_html: {class: "form-control wow fadeInUp black_text"} %>
    <%= f.input :first_name, input_html: {class: "form-control wow fadeInUp black_text"} %>
    <%= f.input :password, input_html: {class: "form-control wow fadeInUp black_text"} %>
    <%= f.input :password_confirmation, input_html: {class: "form-control wow fadeInUp black_text"} %>
    <%= f.button :submit, t("devise.invitations.edit.submit_button") %>
  <% end %>
</div>
